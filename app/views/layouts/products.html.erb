<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <meta name="robots" content="index, follow" />
  <title>Products: <%= controller.action_name %></title>
  
  <!-- Stylesheets -->
  <%= stylesheet_link_tag 'scaffold' %>
  <%= stylesheet_link_tag 'lunatic' %>
  <!--[if IE 6]>
      <script type="text/javascript" src="javascripts/unitpngfix.js"></script>
  	<link href="css/ie6.css" rel="stylesheet" type="text/css" />
  <![endif]-->

  <!-- Javascript -->
  <%= javascript_include_tag 'jquery' %>
  <%= javascript_include_tag 'slider' %>
  <%= javascript_include_tag 'jquery.scrollable' %>
  <%= javascript_include_tag 'jquery.mousewheel' %>
  <script type="text/javascript" >
  	$(function() {
  		$("#scrollable").scrollable({horizontal:true,size: 4});
  	});
  </script>
</head>
<body>

  <div id="container">
  	<div id="centercolumn">

  	<!-- BEGIN HEADER -->
  		<div id="header">
  			<div id="topmenu">
  				<div id="menu">
  					<ul>
  						<li id="home"><%= link_to "Store", :action => :store -%></li>
  					</ul>
  				</div><!-- end menu -->
  				<div id="cart">
  				  <form target="paypal" action="https://www.paypal.com/cgi-bin/webscr" method="post">
            <input type="hidden" name="cmd" value="_s-xclick">
            <input type="hidden" name="encrypted" value="-----BEGIN PKCS7----------END PKCS7-----
            ">
            <input type="image" src="http://megahomework.com/images/but_checkout.png" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
            <img alt="" border="0" src="https://www.paypal.com/en_US/i/scr/pixel.gif" width="1" height="1">
            </form>
          </div>
  				<!-- end cart -->
  			</div><!-- end topmenu -->
  			<div id="top">
  				<div id="logo">
  				  <a href="/products/store"><img src="/images/logo.png" alt="" /></a>
  				  <span class="dude"><%= image_tag('lunatic.png') %></span>
  				</div><!-- end logo -->
  			</div><!-- end top -->
  		</div>
  	<!-- END OF HEADER -->

  	<div class="clr"></div><!-- clear float -->

  	<!-- BEGIN CONTENT -->
  		<div id="content">
  			<div id="c_top">
  				<div id="c_bottom">

<% if !['index', 'edit', 'new'].include?(session[:section]) %>
  				<!-- begin slider -->
  					<div id="slide">
  						<div id="scrollable"> 
  							<a class="prev"></a>
  							<a class="next"></a>   
  							<div class="items">
  							  <% Product.find_all_by_is_showcased(true).each do |product| %>
  							    <% rowcycle = cycle("1", "2", "3", "4") %>
  							    <% if rowcycle == "4" %>
  							      <div class="slide-items noborder">
  							    <% else %>
  							      <div class="slide-items">
  							    <% end %>
  							      <h4><%= number_to_currency(product.price) -%></h4>
  							      <% if product.photo_file_name %> 
  							        <%= link_to(image_tag(product.photo.url(:small)), "/product/#{product.id}") %>
  							      <% end %>
  							    </div>
  							  <% end %>
  						
  								<div style="clear: both;"></div>
  							</div> 
  						</div><!--end scrollable-->
  					</div>
  				<!-- end slider -->
  				
  <% end %>

  					<br style="clear:both;"  />

  					<div id="maincontent">

  						<div id="main">
  						  
  						  <% if flash[:failure] %>  
                  <p style="color: #ff0000;font-size:1.5em;border:1px solid #ff0000;padding:20px"><%= flash[:failure] %></p>
                <% end %>

                <% if flash[:success] %>  
                  <p style="color: #00ff00;font-size:1.5em;border:1px solid #00ff00;padding:20px"><%= flash[:success] %></p>
                <% end %>

                <% if flash[:notice] %>  
                  <p style="color: #ffff00;font-size:1.5em;border:1px solid #ffff00;padding:20px"><%= flash[:notice] %></p>
                <% end %>

                <%= yield %>

<% if !['index', 'edit', 'new'].include?(session[:section]) %>
				<div id="side">
					<div class="sidebox">
						<div class="sidebox_t">
						<div class="sidebox_b">
							<h2>Categories</h2>
							<div class="padbox_side">
								<ul>
								  <% @categories.each do |category| %>
								    <li><%= link_to category, "/products/#{category}" %></li>
							    <% end %>
								</ul>
							</div>
						</div>
						</div>
					</div><!-- end sidebox -->
					<div class="sidebox2">
					<img src="/images/refund.png" alt="" />
					</div><!-- end sidebox2 -->
					<div class="sidebox">
						<div class="sidebox_t">
						<div class="sidebox_b">
							<div class="padbox_side">
							<% if @product_hot %>
							  <h4><%= @product_hot.title -%></h4><br />
							    <p>
							      <% if @product_hot.photo_file_name %> 
							        <%= image_tag @product_hot.photo.url(:small), :class => "imgcenter" %> 
							      <% end %>
							    </p>
							    <p>
							    <%= link_to(image_tag("but_detail.gif", :class => "imgright"), "/product/#{@product_hot.id}") %>
							    <span class="price"><%= number_to_currency(@product_hot.price) -%></span>
							  </p>
							<% end %>
							<span class="strip"><img src="/images/strip.gif" alt="" /></span>
							</div>
						</div>
						</div>
					</div><!-- end sidebox -->
				</div><!-- end side -->
				
	<% end %>
				
				<div class="clr"></div><!-- clear float -->
			</div><!-- end main -->
		
		</div><!-- end maincontent -->
	</div><!-- end c_bottom -->
</div><!-- end c_top -->
</div>
<!-- END OF CONTENT -->


<!-- BEGIN FOOTER -->
<div id="footer">
<div id="footleft">Copyright &copy;2010 J Sandoval, LLC. All Rights Reserved&nbsp;&nbsp;|&nbsp;&nbsp;
  <%= link_to "Terms of Use / Privacy", "/tos.html", {:popup => true} -%> &nbsp;&nbsp;|&nbsp;&nbsp;
  <%= link_to "Contact Us", "mailto:support@lunaticsales.com" -%></div>
<div id="footlright"><img src="/images/credit_card.gif" alt="" /></div>
</div>
<!-- END OF FOOTER -->

</div><!-- end of centercolumn -->
</div><!-- end of container -->



</body>
</html>
