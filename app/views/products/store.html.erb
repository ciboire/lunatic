
<div id="mainleft">
  <div class="pad_content">
    <div style="float:left;vertical-align:center">
      <h1><%= session[:category] %></h1>
    </div>
    <div style="float:right;">
          <%= will_paginate @products %>
    </div>
    <div style="clear:both;"></div>
    
    <% @products.each do |product| %>
      <% rowcycle = cycle("1", "2", "3") %>
      <% if rowcycle == "3" %>
        <div class="prodbox nomargin">
      <% else %>
        <div class="prodbox">
      <% end %>
        <div class="prodbox_c">
          <div class="prodbox_b">
            <div class="pad_box">
              <h2 class="prod_title"><%= h product.title -%></h2>
              <% if product.photo_file_name %> 
                <%= image_tag product.photo.url(:medium), :class => "imgcenter" -%>
              <% end %>
              <p><%= product.description_short -%></p>
              <p><span class="price"><%= number_to_currency(product.price) -%></span></p>
              <p>
                <%= link_to(image_tag( 'but_detail.gif', :class => "imgleft" ), "/product/#{product.id}" ) -%>
                <form name="_xclick" target="_self" action="https://www.paypal.com/cgi-bin/webscrs" method="post">
                <input type="hidden" name="cmd" value="_cart">
                <input type="hidden" name="shopping_url" value="http://www.lunaticsales.com">
                <input type="hidden" name="currency_code" value="USD">
                <input type="hidden" name="amount" <%= "value=\"#{product.price}\"" -%>>
                <input type="hidden" name="item_name" <%= "value=\"#{product.title}\"" -%>>
                <input type="hidden" name="item_number" <%= "value=\"#{product.id}\"" -%>>
                <input type="hidden" name="business" value="admin@jsandovalllc.com">
                <input type="image" src="http://megahomework.com/images/but_addcart.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
                <img alt="" border="0" src="https://www.paypal.com/en_US/i/scr/pixel.gif" width="1" height="1">
                <input type="hidden" name="add" value="1">
                </form>
              </p>
            </div>
          </div>
        </div>
      </div><!-- end prodbox -->
      <% if rowcycle == "3" %>
        <br style="clear:both;"  />
      <% end %>
    <% end %>
    

    
    
    
    
    <div class="clr"></div><!-- clear float -->
    

  </div><!-- end pad_content -->
</div><!-- end mainleft -->

